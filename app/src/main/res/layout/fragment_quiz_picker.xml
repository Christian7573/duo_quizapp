<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <com.microsoft.fluentui.widget.Button
        android:id="@+id/quiz_picker_button"
        style="@style/Widget.FluentUI.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Select quiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.microsoft.fluentui.widget.Button
        android:id="@+id/quiz_picker_start"
        style="@style/Widget.FluentUI.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quiz_picker_button"
        android:text="Start"
        app:layout_constraintEnd_toEndOf="@id/quiz_picker_button"
        app:layout_constraintStart_toStartOf="@id/quiz_picker_button"
        app:layout_constraintTop_toBottomOf="@+id/quiz_picker_button" />

</androidx.constraintlayout.widget.ConstraintLayout>